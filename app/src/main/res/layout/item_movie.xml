<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="#2f2f39">


    <ImageView
        android:id="@+id/movieImg"
        android:layout_width="120dp"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_bookmark_gray"
        app:layout_constraintTop_toTopOf="@id/movieImg"
        app:layout_constraintStart_toStartOf="@id/movieImg" />

    <TextView
        android:id="@+id/movieTitleTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:lines="2"
        android:maxLines="2"
        android:text="title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/movieImg"
        app:layout_constraintStart_toStartOf="@+id/movieImg"
        app:layout_constraintTop_toBottomOf="@+id/movieImg" />

    <ImageView
        android:id="@+id/starImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/movieTitleTxt"
        app:layout_constraintTop_toBottomOf="@+id/movieTitleTxt"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/movieRateTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="rate"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/starImg"
        app:layout_constraintEnd_toEndOf="@+id/movieTitleTxt"
        app:layout_constraintStart_toEndOf="@+id/starImg"
        app:layout_constraintTop_toTopOf="@+id/starImg" />
</androidx.constraintlayout.widget.ConstraintLayout>